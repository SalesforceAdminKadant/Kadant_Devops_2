    </table>
        </div>
        <footer>
        	<div class="slds-modal__footer">
          	<lightning:button name="CloseButton" label="Close" class="slds-button_stretch" variant="neutral" onclick="{!c.closePopup}"></lightning:button>
        	</div>
      		</footer>
		 </div></div>
    </aura:if>
